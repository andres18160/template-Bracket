<!DOCTYPE html>
<html lang="en" ng-app="PruebaTecnica">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="../bracket/images/favicon.png" type="image/png">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/bracket/css")
</head>

<body>

    <!-- Preloader -->
    <div id="preloader">
        <div id="status"><i class="fa fa-spinner fa-spin"></i></div>
    </div>

    <section>

        <div class="leftpanel">

            <div class="logopanel">
                <h1><span>[</span> Prueba <span>]</span></h1>
            </div>
            <!-- logopanel -->

            <div class="leftpanelinner">

                <!-- This is only visible to small devices -->
                <div class="visible-xs hidden-sm hidden-md hidden-lg">
                    <div class="media userlogged">
                        <img alt="" src="Content/bracket/images/photos/loggeduser.png" class="media-object">
                        <div class="media-body">
                            <h4>
                                <label>Nombre</label>
                            </h4>
                            <span>
                                <label>Usuario</label>
                            </span>
                        </div>
                    </div>

                    <h5 class="sidebartitle actitle">Cuenta</h5>
                    <ul class="nav nav-pills nav-stacked nav-bracket mb30">
                        <li><a href="login.aspx"><i class="fa fa-sign-out"></i><span>Salir</span></a></li>
                    </ul>
                </div>

                <h5 class="sidebartitle">Navegación</h5>
                <ul class="nav nav-pills nav-stacked nav-bracket">
                    <li id="liIndex"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i><span>Index</span></a></li>
                    <li id="liAdminClientes"><a href="@Url.Action("Clientes", "Home")"><i class="fa fa-home"></i><span>Clientes</span></a></li>
                    <li id="liAdminFacturas"><a href="@Url.Action("Facturas", "Home")"><i class="fa fa-home"></i><span>Facturas</span></a></li>
                </ul>

            </div>
            <!-- leftpanelinner -->
        </div>
        <!-- leftpanel -->

        <div class="mainpanel">

            <div class="headerbar">

                <a class="menutoggle"><i class="fa fa-bars"></i></a>
                <div class="header-right">
                    <ul class="headermenu">
                        <li>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                    <img src="Content/bracket/images/photos/loggeduser.png" alt="" />
                                    <label>Nombre @ViewBag.UserName</label>
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                                    <li><a href="@Url.Action("Index", "Home")"><i class="glyphicon glyphicon-log-out"></i>Salir</a></li>
                                    <li id="liAdminClientes"><a href="@Url.Action("Clientes", "Home")"><i class="fa fa-home"></i><span>Clientes</span></a></li>
                                    <li id="liAdminFacturas"><a href="@Url.Action("Facturas", "Home")"><i class="fa fa-home"></i><span>Facturas</span></a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
                <!-- header-right -->
            </div>
            <!-- headerbar -->
            <div class="pageheader">
                <h2><i class="fa fa-home"></i> Index <span>@ViewBag.ContentTitle</span></h2>
            </div>

            <div class="contentpanel">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel panel-primary">
                            
                                @RenderBody()
                            
                        </div>
                    </div>
                </div>
            </div>      
        </div>
        <!-- mainpanel -->
    </section>

    @Scripts.Render("~/bracket/js")
    @RenderSection("scripts", required: false)


</body>
</html>


